extends ../src/template/pageDefault.pug
block vars
	- var config = {title:"注册/登录", body:{cls:""}}
block css
	//- link(href='css/travel.css',rel='stylesheet')
	link(rel='stylesheet', href='css/sign.css')
block mainContent
	.main#main
		.signlogin#tab
			a.signup(href='#signup') 注册
			a.signin(href='#signin') 登录
		form#registerbox(method="post", action="/register")
			.form.register
				label 昵称
					input.width(type='text', name='name', placeholder='请输入昵称')
				label 手机号
					input.width(type='text', name='phone', placeholder='请输入手机号')
				label 密码
					input.width(type='password', name='password', placeholder='请输入密码（不少于6位）')
				.button.width 
					button.btn(type='submit') 注册
		form.login#loginbox(method="post", action="/login")
			.form
				label 手机号
					input.width(type='text', name='phone', placeholder='请输入手机号')
				label 密码
					input.width(type='password', name='password', placeholder='请输入密码')
				.button.width 
					button.btn(type='submit') 登录
		if err
			.wrong(data-err=err)
block js
	script(src='libs/jquery-1.8.3.min.js',type='text/javascript')
	script(src='js/sign.min.js',type='text/javascript')
